@page "/learnblazor/components/demoproductcomponent"
@using Tangy_Models.LearnBlazorModels

<div class="bg-light border m-2 col-5">
    <h4 class="text-secondary">Product - @Product?.Id</h4>
    Name: @Product?.Name<br />
    Price: @Product?.Price<br />

    Show properties:
    <input type="checkbox" @bind="Product!.IsActive" />

    @if (Product.IsActive)
    {
        <ul>
            @foreach (var prop in Product?.ProductProperties!)
            {
                <li>@prop.Key: @prop.Value</li>
            }
        </ul>
        <EditDeleteComponent IsActive="Product.IsActive" />
    }
    else
    {
        <p>Product is inactive</p>
    }
</div>

@code {
    [Parameter]
    public Demo_Product? Product { get; set; }

}
